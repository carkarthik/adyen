<main class="preview-page">
  <section class="cart">
    <h2>Cart</h2>
    <div class="order-summary">
      <ul class="order-summary-list">
        <li class="order-summary-list-list-item">
          <img src="/images/pizza.png" class="order-summary-list-list-item-image" alt="">
          <p class="order-summary-list-list-item-title">Pizza</p>
          <p class="order-summary-list-list-item-price">17.00</p>
        </li>
      </ul>
    </div>
    <div class="cart-footer"><span class="cart-footer-label">Total:</span><span
        class="cart-footer-amount">17.00</span>
      <a href="/checkout?type={{type}}">
        <p class="button">Continue to checkout</p>
      </a>
    </div>
  </section>
</main>
